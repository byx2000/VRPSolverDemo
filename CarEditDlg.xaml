<Window x:Class="VRPSolverDemo.CarEditDlg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VRPSolverDemo"
        mc:Ignorable="d"
        Title="车辆编辑" Height="200" Width="400" ResizeMode="NoResize">
    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="载重限制: "/>
                <TextBox x:Name="capacity" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="里程限制: "/>
                <TextBox x:Name="disLimit" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Center">
                <Button x:Name="okBtn" Width="50" HorizontalAlignment="Left" Click="okBtn_Click" Content="确定"/>
                <Button x:Name="cancalBtn" Width="50" HorizontalAlignment="Right" Click="cancalBtn_Click" Content="取消"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
